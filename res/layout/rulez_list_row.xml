<?xml version="1.0" encoding="utf-8"?>
<TwoLineListItem xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textAlignment="center" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" 
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="25dp"
            android:src="@drawable/rules_icon" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/linearLayout1"
            android:orientation="vertical" >

             <TextView
                 android:id="@+id/ruleName"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignParentLeft="true"
                 android:layout_alignParentTop="true"
                 android:layout_marginLeft="10dp"
                 android:focusable="false"
                 android:textColor="#667700"
                 android:textSize="18dip"
    			 android:textStyle="bold" 
                 android:hint="Rule Name" />

              <TextView
                android:id="@+id/profilename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:hint="Selected Profile" />
               <!--View
			    android:layout_width="fill_parent"
			    android:layout_height="2dip"
			    android:background="#000000" /-->
				<LinearLayout
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentBottom="true"
	            android:layout_marginBottom="10dp"
	            android:layout_marginLeft="10dp"
	            android:orientation="horizontal" >
	            	<ImageView
			            android:id="@+id/img_calendar"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_alignParentLeft="true"
			            android:layout_alignParentTop="true"
			            android:layout_marginLeft="25dp"
			            android:layout_marginTop="10dp"
			            android:src="@drawable/calendar_icon" />
				    
		            <TextView
		                android:id="@+id/calendarValue"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_alignParentLeft="true"
		                android:layout_alignParentTop="true"
		                android:layout_marginTop="10dp"
		                android:layout_marginLeft="25dp"
		                 />
				</LinearLayout>
				<LinearLayout
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentBottom="true"
	            android:layout_marginBottom="10dp"
	            android:layout_marginLeft="10dp"
	            android:layout_toRightOf="@+id/linearLayout1"
	            android:orientation="horizontal" >
		            <ImageView
			            android:id="@+id/img_locatoin"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_alignParentLeft="true"
			            android:layout_alignParentTop="true"
			            android:layout_marginLeft="25dp"
			            android:layout_marginTop="10dp"
			            android:src="@drawable/location_marker" />
							    
		            <TextView
		                android:id="@+id/locationValue"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_alignParentLeft="true"
		                android:layout_alignParentTop="true"
		                android:layout_marginLeft="25dp"
		                android:layout_marginTop="10dp"
		                 />
		         </LinearLayout>
            
           
        </LinearLayout>

		<CheckBox
	        android:id="@+id/cbActivate"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_marginTop="25dp"
	        android:layout_marginRight="10dp"
	        android:text="Active"
	        android:focusable="false" />

		<!-- Button
		    android:id="@+id/btn_addCalendar"
		    style="?android:attr/buttonStyleSmall"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="Add Constraint" />
		
		<Button
		    android:id="@+id/btn_addLocation"
		    style="?android:attr/buttonStyleSmall"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="Add Location" /-->
       
    </LinearLayout>


</TwoLineListItem>