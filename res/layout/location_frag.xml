<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
	<ListView android:layout_height="wrap_content" 
	    android:layout_width="match_parent" 
	    android:id="@+id/lv_location" 
	    android:paddingBottom="25dp" 
	    android:layout_marginBottom="25dip"> 
	</ListView>
    <TextView
        android:id="@+id/lat_lng"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="lat_lng"
        android:layout_marginLeft="10dp"
        android:textIsSelectable="true"
        android:textSize="20sp"
        android:visibility="gone" />

    	 <Button
    	     android:id="@+id/get_location_button"
    	     android:layout_width="wrap_content"
    	     android:layout_height="wrap_content"
    		android:visibility="gone"
    	     android:layout_below="@+id/lat_lng"
    	     android:text="Location" />

    	 <TextView
    	     android:id="@+id/address"
    	     android:layout_width="wrap_content"
    	     android:layout_height="wrap_content"
    	     android:layout_below="@+id/get_location_button"
    	     android:layout_marginLeft="20dp"
    	     android:layout_marginTop="18dp"
    	     android:text="Address" 
    	     android:visibility="gone"/>

    	 <ProgressBar
        android:id="@+id/address_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:indeterminate="true"
        android:visibility="gone" />
    	 <Button
    	     android:id="@+id/get_address_button"
    	     android:layout_width="wrap_content"
    	     android:layout_height="wrap_content"
    	     android:layout_alignParentLeft="true"
    	     android:layout_below="@+id/address"
    	     android:layout_marginTop="18dp"
    	     android:text="Address" 
    	     android:visibility="gone"/>

    	  <Button
    	      android:id="@+id/start_updates"
    	      android:layout_width="wrap_content"
    	      android:layout_height="wrap_content"
    	      android:layout_above="@+id/address"
    	      android:layout_alignParentRight="true"
    	      android:layout_marginRight="15dp"
    	      android:text="start_updates" 
    	      android:visibility="gone"/>

    	  <Button
    	      android:id="@+id/stop_updates"
    	      android:layout_width="wrap_content"
    	      android:layout_height="wrap_content"
    	      android:layout_alignBaseline="@+id/address"
    	      android:layout_alignBottom="@+id/address"
    	      android:layout_alignRight="@+id/start_updates"
    	      android:gravity="center_vertical|center_horizontal"
    	      android:text="stop_updates" 
    	      android:visibility="gone"/>
	<Button
	    android:id="@+id/btn_addlocation"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentBottom="true"
	    android:layout_centerHorizontal="true"
	    android:text="Add Location" />
</RelativeLayout>
